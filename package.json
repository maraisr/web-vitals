{
	"name": "web-vitals-worker",
	"version": "0.0.1",
	"license": "MIT",
	"author": "",
	"scripts": {
		"fmt": "prettier --list-different --write \"{*,{workers,packages,site}/**/*}.(ts|tsx|md|html|css|json)\""
	},
	"prettier": {
		"bracketSpacing": true,
		"printWidth": 80,
		"proseWrap": "always",
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true,
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml"
				],
				"options": {
					"printWidth": 120,
					"tabWidth": 2,
					"useTabs": false
				}
			}
		]
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^2.2.2",
		"@marais/tsconfig": "^0.0.1",
		"prettier": "^2.3.2"
	}
}
